{% extends "base.twig" %}

{% block content %}
	<div class="container content-wrapper">
		<div class="row justify-content-center">
			<div class="map col-lg-7 col-12 mt-5">
				<div class="row map__wrapper">
					<iframe width="100%" height="300" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=%D0%9B%D1%8C%D0%B2%D1%96%D0%B2%20%D0%B2%D1%83%D0%BB.%D0%9B%D1%83%D0%B3%D0%B0%D0%BD%D1%81%D1%8C%D0%BA%D0%B0%201%D0%90%20%D0%9C%D0%B5%D0%B1%D0%BB%D0%B5%D0%B2%D0%B8%D0%B9%20%D0%9A%D1%80%D0%B0%D0%B9+(%D0%9C%D0%B5%D0%B1%D0%BB%D0%B5%D0%B2%D0%B8%D0%B9%20%D0%9A%D1%80%D0%B0%D0%B9)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
				</div>
			</div>
			<div class="col-lg col-12 mt-5 pl-lg-5 pl-1">
				<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
					<section class="article-content">
						<h1 class="article-h1">{{post.title}}</h1>
						<div class="article-body">
							{{post.content}}

							<div class="address">
								<div class="row">
									<div class="col-2">
										<img class="img-fluid" src="{{site.url}}/img/address.png" alt="">
									</div>
									<div class="col-10 pt-3">
										{{ block.address }}
									</div>
								</div>
							</div>

							<div class="phone mt-3">
								<div class="row">
									<div class="col-2">
										<img class="img-fluid" src="{{site.url}}/img/call.png" alt="">
									</div>
									<div class="col-10">
										<a class="header-link" href="tel:{{ block.phone1 }}">{{ block.phone1 }}</a>
										{% if block.phone2 %}
											<br>
											<a class="header-link" href="tel:{{ block.phone2 }}">{{ block.phone2 }}</a>
										{% endif %}
									</div>
								</div>
							</div>

							<div class="socials mt-3">
								<div class="row">
									<div class="col-12">
										{% for social in block.socials %}
											<a class="header-link--social mr-2" href="{{ social.url }}"><img src="{{ social.image }}" alt=""></a>
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</section>
				</article>
			</div>
		</div>
	</div>
{% endblock %}
